<%= form_for @search, html: { class: 'pure-form'} do |f| %>

  <div class="field">
    <%= f.label :keywords%>
    <%= f.text_field :keywords%>
  </div>

  <div class="field">
    <%= f.label :category%>
    <%= f.select :category,["Resistance","Transistors","Capacitance","Microcontrolers","Batteries"]%>
  </div>

  <div class="field">
    <%= f.label :min_value, "Minimum value"%> - <%= f.text_field :min_value, size: 10 %>
    <%= f.label :min_value, "Maximum value"%> - <%= f.text_field :max_value, size: 10 %>
  </div>

  <div class= "actions"><%=f.submit "Search", class: "pure-button pure-button-primary"%></div>
<% end %>
<%= link_to 'Back', catalogs_path%>
