    <div class="panel panel-info">
      <div class="panel-heading">Create and modify element</div>
      <div class="panel-body">


        <%= simple_form_for(@catalog, html: { class: 'form-horizontal'}) do |f| %>

          <p>
            <div class="col-sm-5"><%= f.label :category%></div>
            <%= f.select :category,["Resistance","Transistors","Capacitance","Microcontrolers","Batteries"]%>
          </p>
          <p>
            <div class="col-sm-3"><%= f.label :element%></div>
            <%= f.text_field :element, placeholder: "Technical name of the element", :size => 50%>
          </p>
          <p>
            <div class="col-sm-3"><%= f.label :value%></div>
            <%= f.text_field :value, :size => 40%>
            <%= f.select :unit,["Ohm","kOhm","MOhm","kB","MB","GB","TB"]%>
          </p>
          <p>
            <div class="col-sm-3"><%= f.label :amount%></div>
            <%= f.text_field :amount, placeholder: "How many elements do you have ?", :size => 50%>
          </p>
          <%= f.submit "Submit", class: 'btn btn-info'%>
          <%= link_to "Cancel", root_path, class: 'btn btn-danger mr-2' %>
          <% end %>
          </td>
</div>
</div>
