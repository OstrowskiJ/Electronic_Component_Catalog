
<div class="containertable">
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Element</th>
      <th>Category</th>
      <th>Value</th>
      <th>Amount</th>
      <th>User's login name</th>
    </tr>
  </thead>
  <% @catalogs.each do |catalog| %>
  <tbody>
  <tr>
    <td><%= link_to catalog.element, catalog, class: "a" %></td>
    <td><%=catalog.category%></td>
    <td><%=catalog.value%></td>
    <td><%=catalog.amount%></td>
    <td><%= link_to catalog.user.name, user_path(catalog.user_id), class: "a" %></td>
  </tr>
<% end %>
  </table>
<%= link_to "Add an element", new_catalog_path %>
</div>
